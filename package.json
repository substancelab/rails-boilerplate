{
  "name": "boilerplate",
  "private": true,
  "dependencies": {
    "@rails/ujs": "^7.1.501",
    "esbuild": "^0.25.3",
    "standard": "^17.1.2",
    "tailwindcss": "^4.1.4"
  },
  "version": "0.1.0",
  "devDependencies": {
    "prettier": "3.5.3"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=/assets",
    "build:css": "tailwindcss -i ./app/assets/stylesheets/application.css -o ./app/assets/builds/application.css --minify"
  }
}
